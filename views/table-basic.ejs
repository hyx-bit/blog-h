    <script src="javascripts/custom.min.js"></script>
    <script>
        $(function(){
            
            $("#delete").click(function(){
                $.ajax({url:"/delete",type:"post",data:{subject:$(this).attr("name")},success:function(result){
                alert(result.data)
                location.href="/"
    }});
});
        })
    </script>
